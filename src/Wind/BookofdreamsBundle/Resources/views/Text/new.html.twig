{% extends 'WindBookofdreamsBundle:Default:base.html.twig' %}

{% block body -%}
	<h1>Добавить текст</h1>

	{{ form_start(form, {'attr': {'class': 'form-horizontal','style': 'width: 300px;'}}) }}
	{{ form_errors(form, {'attr': {'class': 'bg-danger'}}) }}

	<div class="form-group">
		<div class="col-10">
			{{ form_label(form.text) }}
		</div>
		<div class="col-10">
			{{ form_widget(form.text, {'attr': {'class': 'form-control','style': 'width: 600px; height: 200px; resize: none;'}}) }}
		</div>
		<div class="col-10">
			{{ form_label(form.words) }}
		</div>
		<div class="col-10">
			{{ form_widget(form.words, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="col-10">
			{{ form_label(form.tags) }}
		</div>
		<div class="col-10">
			{{ form_widget(form.tags, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="col-10">
		{{ form_widget(form.submit, {'attr': {'class': 'btn btn-success'}}) }}
	</div>

	<div class="col-10" style="margin-top: 10px;">
		<a class="btn btn-info" href="{{ path('bookofdreams_text') }}">
			Вернуться к списку
		</a>
	</div>
	{{ form_end(form) }}
{% endblock %}
