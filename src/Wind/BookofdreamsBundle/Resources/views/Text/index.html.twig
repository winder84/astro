{% extends 'WindBookofdreamsBundle:Default:base.html.twig' %}
{% block body -%}
	<div class="text-center">
		<a style="display: inline-block; margin: 2px;" class="btn btn-primary btn-xs" href="{% if page >= 0 %}{{ path('bookofdreams_text', { 'page': page - 1 }) }}{% else %}{{ path('bookofdreams_text', { 'page': 0 }) }}{% endif %}">Назад</a>
		Страница:{{ page + 1 }} (Всего:{{ count + 1}})
		<a style="display: inline-block; margin: 2px;" class="btn btn-primary btn-xs" href="{% if page < count %}{{ path('bookofdreams_text', { 'page': page + 1 }) }}{% else %}{{ path('bookofdreams_text', { 'page': count }) }}{% endif %}">Вперед</a>
	</div>
    <h1 class="text-center">Тексты</h1>
	{% if filter is not empty %}
		<h4 style="padding: 5px;" class="bg-warning">Фильтр по "{{ filter }}"</h4>
	{% endif %}

	<a class="btn btn-success btn-block" style="margin: 10px 0;" href="{{ path('bookofdreams_text_new') }}">
		Добавить
	</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Текст</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>
					<a class="btn btn-link" href="{{ path('bookofdreams_text_show', { 'id': entity.id }) }}" style="max-width: 500px; white-space: normal;">
						{{ entity.text|slice(0, 150) ~ '...' }}
					</a>
				</td>
                <td>
					<a style="display: inline-block; margin: 2px;" class="btn btn-default btn-sm" href="{{ path('bookofdreams_text_show', { 'id': entity.id }) }}">Показать</a>
					<a style="display: inline-block; margin: 2px;" class="btn btn-default btn-sm" href="{{ path('bookofdreams_text_edit', { 'id': entity.id }) }}">Редактировать</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	<a class="btn btn-success btn-block" href="{{ path('bookofdreams_text_new') }}">
		Добавить
	</a>
	<br />
	<div class="text-center">
		<a style="display: inline-block; margin: 2px;" class="btn btn-primary btn-xs" href="{% if page >= 0 %}{{ path('bookofdreams_text', { 'page': page - 1 }) }}{% else %}{{ path('bookofdreams_text', { 'page': 0 }) }}{% endif %}">Назад</a>
		Страница:{{ page + 1 }} (Всего:{{ count + 1}})
		<a style="display: inline-block; margin: 2px;" class="btn btn-primary btn-xs" href="{% if page < count %}{{ path('bookofdreams_text', { 'page': page + 1 }) }}{% else %}{{ path('bookofdreams_text', { 'page': count }) }}{% endif %}">Вперед</a>
	</div>
    {% endblock %}
