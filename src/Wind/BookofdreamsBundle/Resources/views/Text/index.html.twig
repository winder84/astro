{% extends 'WindBookofdreamsBundle:Default:base.html.twig' %}

{% block body -%}
    <h1>Тексты</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Текст</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td><a class="btn btn-link" href="{{ path('bookofdreams_text_show', { 'id': entity.id }) }}">{{ entity.text }}</a></td>
                <td>
                <ul>
                    <li style="display: inline-block;list-style: none;">
                        <a class="btn btn-default" href="{{ path('bookofdreams_text_show', { 'id': entity.id }) }}">Показать</a>
                    </li>
                    <li style="display: inline-block;list-style: none;">
                        <a class="btn btn-default" href="{{ path('bookofdreams_text_edit', { 'id': entity.id }) }}">Редактировать</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <ul>
        <li style="display: inline-block;list-style: none;">
            <a class="btn btn-lg btn-success" href="{{ path('bookofdreams_text_new') }}">
                Добавить
            </a>
        </li>
    </ul>
    {% endblock %}
