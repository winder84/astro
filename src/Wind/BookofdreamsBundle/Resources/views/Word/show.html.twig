{% extends 'WindBookofdreamsBundle:Default:base.html.twig' %}

{% block body -%}

	<div class="container">
		<h1></h1>
		<table class="table table-bordered ">
			<tbody>
				<tr>
					<th>Id:</th>
					<td>{{ entity.id }}</td>
				</tr>
				<tr>
					<th>Слово:</th>
					<td>{{ entity.name }}</td>
				</tr>
				<tr>
					<th>Тексты:</th>
					<td>
						{% for text in entity.texts %}
							<a class="btn btn-link" style="margin: 2px;" href="{{ path('bookofdreams_text_show', { 'id': text.id }) }}">{{ text.text|slice(0, 100) ~ '...' }}</a>
							<hr />
						{% endfor %}
					</td>
				</tr>
			</tbody>
		</table>
		<div class="col-10" style="margin-top: 10px;">
			{{ form_start(delete_form, {'attr': {'class': 'form-horizontal','style': 'width: 300px;'}}) }}
			<a class="btn btn-info" href="{{ path('bookofdreams_word_edit', { 'id': entity.id }) }}">
				Редактировать
			</a>
			{{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger'}}) }}
			{{ form_end(delete_form) }}
		</div>
		<div class="col-10" style="margin-top: 10px;">
			<a class="btn btn-info" href="{{ path('bookofdreams_word') }}">
				Вернуться к списку
			</a>
		</div>
	</div>
{% endblock %}
