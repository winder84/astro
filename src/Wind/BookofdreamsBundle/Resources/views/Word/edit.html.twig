{% extends 'WindBookofdreamsBundle:Default:base.html.twig' %}

{% block body -%}
	<div class="container">
		<h1></h1>
		{{ form_start(edit_form, {'attr': {'class': 'form-horizontal','style': 'width: 300px;'}}) }}
		<div class="form-group">
			<div class="col-sm-10">
				<label>Слово:</label>
			</div>
			<div class="col-sm-10">
				{{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		<div class="col-10" style="margin-top: 10px;">
			{{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-success'}}) }}
		</div>
		{{ form_end(edit_form) }}
		{{ form_start(delete_form, {'attr': {'class': 'form-horizontal','style': 'width: 300px;'}}) }}
		<div class="col-10" style="margin-top: 10px;">
			{{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-danger'}}) }}
		</div>
		{{ form_end(delete_form) }}
		<div class="col-10" style="margin-top: 10px;">
			<a class="btn btn-info" href="{{ path('bookofdreams_word') }}">
				Вернуться к списку
			</a>
		</div>
	</div>
{% endblock %}
