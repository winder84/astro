{% extends 'WindBookofdreamsBundle:Default:base.html.twig' %}

{% block body -%}

	<div class="container">
		<h1>Тэг</h1>
		<table class="table table-bordered">
			<tbody>
			<tr>
				<th>Id</th>
				<td>{{ entity.id }}</td>
			</tr>
			<tr>
				<td>{{ entity.name }}</td>
				<th>Name</th>
			</tr>
			</tbody>
		</table>

		<div class="col-10" style="margin-top: 10px;">
			<a class="btn btn-info" href="{{ path('bookofdreams_tag') }}">
				Вернуться к списку
			</a>
		</div>

		<div class="col-10" style="margin-top: 10px;">
			<a class="btn btn-info" href="{{ path('bookofdreams_tag_edit', { 'id': entity.id }) }}">
				Редактировать
			</a>
		</div>
		{{ form_start(delete_form, {'attr': {'class': 'form-horizontal','style': 'width: 300px;'}}) }}
		<div class="col-10" style="margin-top: 10px;">
			{{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-success'}}) }}
		</div>
		{{ form_end(delete_form) }}
	</div>
{% endblock %}
